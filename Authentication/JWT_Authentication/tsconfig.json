{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./server",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules"]
  }
  